# Makefile wrapper to make argparse package work with autotools
# We are going to statically link into this library, so nothing 
# produced by this library will be installed into the $(DESTDIR)
include Makefile

.PHONY: all distdir install install-data install-exec uninstall install-dvi install-html install-info install-ps install-pdf installdirs check installcheck mostlyclean clean distclean maintainer-clean dvi pdf ps info html tags ctags

# all, test and clean is already defined
# most targets are going to be empty

MKDIR_P = @MKDIR_P@
srcdir = @srcdir@

DISTFILES = $(srcdir)/README.md \
            $(srcdir)/LICENSE \
            $(srcdir)/Makefile \
            $(srcdir)/GNUMakefile.in \
            $(srcdir)/argparse.c \
            $(srcdir)/argparse.h \
            $(srcdir)/tap-functions \
            $(srcdir)/test.sh \
            $(srcdir)/test_argparse.c

# $(distdir) will be set to ../$(PACKAGE)-$(VERSION)/argparse
distdir: $(DISTFILES)
	test -d "$(distdir)" || $(MKDIR_P) "$(distdir)"
	cp --force $^ $(distdir)

install: all

install-data: ;

install-exec: all

uninstall: ;

install-dvi: ;

install-html: ;

install-info: ;

install-ps: ;

install-pdf: ;

installdirs: ;

check: test

installcheck: ;

mostlyclean: clean

distclean: clean 
	-rm -f GNUMakefile

maintainer-clean: clean 
	-rm -f GNUMakefile

dvi: ;

pdf: ;

ps: ;

info: ;

html: ;

tags: ;

ctags: ;